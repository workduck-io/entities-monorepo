{
  "compileOnSave": false,
  "composite": true,
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2017"],
    "types": ["node"],
    "paths": {
      "@mex/access-checker": ["libs/access-checker/src/index.ts"],
      "@mex/entity-utils": ["libs/entity-utils/src/index.ts"],
      "@mex/gen-utils": ["libs/gen-utils/src/index.ts"],
      "@mex/middy-utils": ["libs/middy-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
